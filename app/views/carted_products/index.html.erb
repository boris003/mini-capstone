<h1>Your Cart:</h1>


<% @all_carted_products.each do |product| %>
  <div>
    Make: <%= product.car.make %>
    Model: <%= product.car.model %>
    Price: <%= product.car.price %>
    Quantity: <%= product.quantity %>
    <%= button_to "Delete", {action: "destroy", id: product.id}, method: :delete, data: { confirm: "Are you sure?", class: "btn btn-danger"} %>
  </div>
<%end%>

<br>
<%= form_tag "/orders/#{@order.id}", method: :patch do %>
  <input type="submit" value="Buy Now">
<% end %>
<br>
<%= button_to "/" do %>
  <input type="submit" value="Continue shopping">
<% end %>